        <Rectangle Fill="#FF259106" Margin="101,224,126,6" Stroke="#FF0A0707"/>
        <Rectangle Fill="#FF020601" Margin="196,230,54,25" Stroke="#FF0A0707" RenderTransformOrigin="0.557,-1.133"/>
