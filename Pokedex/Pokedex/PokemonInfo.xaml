        <Rectangle Fill="#FF000408" Margin="0,73,204,191" Stroke="#FF0A0707" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform AngleX="-0.952"/>
                    <RotateTransform Angle="0.238"/>
