            <Rectangle Fill="#FF020601" Stroke="#FF0A0707" Margin="14,15,15,15"/>
        </Border>
        <RadioButton x:Name="radioButton_Copy2" Content="" Margin="159,84,119,167" Background="#FFEC0C0C"/>
        <RadioButton x:Name="radioButton_Copy3" Content="" Margin="118,84,159,161" Background="#FFEC0C0C"/>
        <RadioButton x:Name="radioButton_Copy4" Content="" Margin="45,195,232,50" Background="#FFEC0C0C"/>
        <TextBox x:Name="textBoxPokemonName" Margin="119,0,10,246" TextWrapping="Wrap" Text="Enter Pokemon Name"/>
        <Button x:Name="buttonGetPokemon" Content="Get Pokemon Info" Margin="119,23,54,226" Click="buttonGetPokemon_Click"/>

    </Grid>
</Window>
